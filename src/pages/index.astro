---
import FrontendA from "../components/FrontendA.jsx";
import FrontendB from "../components/FrontendB.jsx";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{"Astro example"}</title>
    <script type="importmap">
    {
      "imports": {
        "react": "https://esm.sh/react",
        "react-dom": "https://esm.sh/react-dom",
        "solid-js": "https://esm.sh/solid-js"
      }
    }
    </script>
  </head>
  <body>
    <main>
      <h1>Beetlejuice microfrontends</h1>
      <main>
        <div class="grid">
          <div class="col">
            <FrontendA client:only="react" />
          </div>
          <div class="col">
            <FrontendB client:only="react" />
          </div>
        </div>
      </main>
    </main>
  </body>
</html>

<style>
html {
  font-family: system-ui, sans-serif;
  background-color: #f6f6f6;
}

main {
  margin: 0 auto;
  padding: 1.5rem;
  max-width: 1024px;
}

h1 {
  font-size: 3rem;
  font-weight: 800;
  margin: 0 auto;
  text-align: center;
}

.grid {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
}
</style>